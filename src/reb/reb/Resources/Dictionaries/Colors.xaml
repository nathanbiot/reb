    <Color x:Key="OnDarkBackgroundColor">#FFFFFF</Color>

    <Color x:Key="DarkSurfaceColor">#000a12</Color>
    <Color x:Key="OnDarkSurfaceColor">#FFFFFF</Color>

    <Color x:Key="ErrorColor">#b00020</Color>
