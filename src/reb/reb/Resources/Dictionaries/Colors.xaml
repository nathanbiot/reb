    <Color x:Key="PrimaryColor">#5e35b1</Color>
    <Color x:Key="PrimaryColorLight">#9162e4</Color>
    <Color x:Key="PrimaryColorDark">#280680</Color>
    <Color x:Key="OnPrimaryColor">#FFFFFF</Color>

    <Color x:Key="SecondaryColor">#fdd835</Color>
    <Color x:Key="SecondaryColorLight">#ffff6b</Color>
    <Color x:Key="SecondaryColorDark">#c6a700</Color>
    <Color x:Key="OnSecondaryColor">#000000</Color>

    <Color x:Key="LightBackgroundColor">#eceff1</Color>
